<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:background="#ec4141">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created time"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:layout_below="@+id/comment_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment text"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:layout_below="@+id/comment_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Name "
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:background="#28a8ed"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:background="#28a8ed"
            android:src="@android:drawable/ic_menu_delete"
            android:id="@+id/delete_comment_button"
            android:layout_above="@+id/comment_text"
            android:layout_alignParentEnd="true" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:background="#28a8ed"
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/edit_comment_button"
            android:layout_alignBottom="@+id/comment_name"
            android:layout_toStartOf="@+id/delete_comment_button" />

    </RelativeLayout>

</android.support.v7.widget.CardView>