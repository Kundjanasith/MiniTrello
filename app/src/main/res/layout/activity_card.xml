<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.exceed.minitrello.activities.CardActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_cardList"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_above="@+id/mentor_text"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView3"
        android:layout_gravity="bottom" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:text="Card Description : "
        android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame" />

    <EditText
        android:id="@+id/card_description_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_description_edittext"
        android:text="Comment : "
        android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame" />

    <EditText
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/send_button"
        android:hint="Add comment" />

    <ImageButton
        android:id="@+id/send_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#50c8e6"
        android:src="@android:drawable/ic_menu_send"
        android:text="Send"
        android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame" />

    <EditText
        android:id="@+id/mentor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comment_text"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/send_button"
        android:hint="Name " />


</RelativeLayout>
